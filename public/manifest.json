{
  "manifest_version": 3,
  "name": "AI Reply Assistant",
  "description": "An AI-powered reply assistant for generating responses to messages.",
  "version": "1.0",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "identity",
    "identity.email"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.jpg",
      "48": "icons/icon48.jpg",
      "128": "icons/icon128.jpg"
    }
  },
  "icons": {
    "16": "icons/icon16.jpg",
    "48": "icons/icon48.jpg",
    "128": "icons/icon128.jpg"
  },
  "web_accessible_resources": [
    {
      "resources": ["index.html", "assets/*.css", "assets/*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}